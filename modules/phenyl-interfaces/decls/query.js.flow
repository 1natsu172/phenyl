// @flow
import type { WhereConditions } from './where-conditions.js.flow'
import type { Id } from './id.js.flow' // string | number
import type { SortNotation } from './sort-notation.js.flow' // string | number
type ModelName = string

export type Query = WhereQuery | IdQuery | IdsQuery | CustomQuery

export interface WhereQuery {
  from: ModelName,
  where: WhereConditions,
  skip?: number,
  limit?: number,
  sort?: SortNotation, // { [key: string]: 1 | -1 }
}

export interface IdQuery {
  from: string,
  id: Id
}

export interface IdsQuery {
  from: string,
  ids: Array<Id>
}

export interface CustomQuery {
  name: string, // custom query name
  params?: Object,
}

