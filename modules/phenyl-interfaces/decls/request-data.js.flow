// @flow
import type {
  IdsQuery,
  IdQuery,
  WhereQuery,
  CustomQuery,
} from './query.js.flow'
import type {
  DeleteCommand,
  InsertCommand,
  LoginCommand,
  LogoutCommand,
  UpdateCommand,
  CustomCommand,
} from './command.js.flow'

export type RequestMethodName =
  'find' |
  'findOne' |
  'get' |
  'getByIds' |
  'insert' |
  'insertAndGet' |
  'insertAndFetch' |
  'update' |
  'updateAndGet' |
  'updateAndFetch' |
  'delete' |
  'runCustomQuery' |
  'runCustomCommand' |
  'login' |
  'logout'

export type RequestData = {
  method: RequestMethodName,
  find?: WhereQuery,
  findOne?: WhereQuery,
  get?: IdQuery,
  getByIds?: IdsQuery,
  insert?: InsertCommand,
  insertAndGet?: InsertCommand,
  insertAndFetch?: InsertCommand,
  update?: UpdateCommand,
  updateAndGet?: UpdateCommand,
  updateAndFetch?: UpdateCommand,
  delete?: DeleteCommand,
  runCustomQuery?: CustomQuery,
  runCustomCommand?: CustomCommand,
  login?: LoginCommand,
  logout?: LogoutCommand,
